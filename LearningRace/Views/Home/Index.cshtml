@section customScripts{
    <script src="../../Scripts/Cutegories/CategoriesPicker.js" type="text/javascript"></script>
}

@section featured {
    <h2>Pick a category 
        @if (ViewBag.IsAdmin)
        {
            @Html.ActionLink("Create New Category", "Edit", "Category", null, new { @class = "btn btn-default"})
        }
    </h2>
}
@{var childViewData = new ViewDataDictionary(new ViewDataDictionary { { "parentId", null }, { "IsAdmin", ViewBag.IsAdmin } });}
@if (ViewBag.Categories != null)
{
@Html.Partial("CategoryPicker", ViewBag.Categories as object, childViewData)
}